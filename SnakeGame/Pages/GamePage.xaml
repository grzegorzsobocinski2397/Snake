<local:BasePage
    x:Class="SnakeGame.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnakeGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="BoardPage"
    d:DesignHeight="450"
    d:DesignWidth="450"
    x:TypeArguments="local:GameViewModel"
    mc:Ignorable="d">

    <Page.InputBindings>
        <!--  Movement commands  -->
        <KeyBinding Key="Up" Command="{Binding UpKeyCommand}" />
        <KeyBinding Key="Down" Command="{Binding DownKeyCommand}" />
        <KeyBinding Key="Right" Command="{Binding RightKeyCommand}" />
        <KeyBinding Key="Left" Command="{Binding LeftKeyCommand}" />
        <!-- Option commands -->
        <KeyBinding Key="Esc" Command="{Binding ExitKeyCommand}"/>
        <KeyBinding Key="P" Command="{Binding PauseCommand}"/>
    </Page.InputBindings>
    <!--  Background  -->
    <Border Background="Black">
        <!--  Game board  -->
        <Border
            Margin="20,20,20,90"
            BorderBrush="SpringGreen"
            BorderThickness="2">

            <Canvas>
                <Rectangle
                    Canvas.Left="{Binding LeftCoordinate}"
                    Canvas.Top="{Binding TopCoordinate}"
                    Width="10"
                    Height="10"
                    Fill="White" />
            </Canvas>
        </Border>
    </Border>
</local:BasePage>
