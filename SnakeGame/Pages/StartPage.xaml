<local:BasePage
    x:Class="SnakeGame.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SnakeGame"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
Focusable="True"
    
    d:DesignHeight="450"
    d:DesignWidth="450"
    x:TypeArguments="local:StartGameViewModel"
    mc:Ignorable="d">

    <Page.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding StartGameCommand}" />
    </Page.InputBindings>
    <!--  Content  -->
    <Grid Background="Black">

        <Grid.InputBindings>
            <KeyBinding Key="J" Command="{Binding StartGameCommand}" />
        </Grid.InputBindings>

        <Grid.RowDefinitions>
            <!--  Snake title  -->
            <RowDefinition Height="*" />
            <!--  Press enter to begin  -->
            <RowDefinition Height="*" />
            <!--  Instructions  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,40,0,0"
            VerticalAlignment="Top"
            FontSize="70"
            Style="{StaticResource BaseTextBlock}"
            Text="SNAKE" />

        <!--  Press enter to begin  -->
        <TextBlock
            Grid.RowSpan="3"
            VerticalAlignment="Center"
            FontSize="40"
            TextWrapping="WrapWithOverflow"
            TextAlignment="Center"
            Style="{StaticResource BaseTextBlock}">
            <Run Text="PRESS " />
            <Run Foreground="Red" Text=" ENTER  " />
            <Run Text="TO  BEGIN" />
        </TextBlock>

        <!--  Instructions  -->
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!--  Movement instructions  -->
            <TextBlock Style="{StaticResource BaseTextBlock}">
                <Run Text="MOVE  WITH  YOUR " />
                <Run Foreground="CadetBlue" Text=" KEYBOARD  ARROWS " />
            </TextBlock>

            <!--  Pause instruction  -->
            <TextBlock Style="{StaticResource BaseTextBlock}">
                <Run Text="PRESS " />
                <Run Foreground="GreenYellow" Text=" P" />
                <Run Text=" TO  PAUSE" />
            </TextBlock>

            <!--  Quit instruction  -->
            <TextBlock Style="{StaticResource BaseTextBlock}">
                <Run Text="PRESS " />
                <Run Foreground="Purple" Text=" ESC" />
                <Run Text=" TO  QUIT" />
            </TextBlock>


        </StackPanel>
    </Grid>
</local:BasePage>
